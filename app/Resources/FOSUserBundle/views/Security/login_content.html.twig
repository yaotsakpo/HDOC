{% trans_default_domain 'FOSUserBundle' %}


<html lang="en">
<head>
        <title>{% block title %}H-DOC{% endblock %}</title><meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="{{ asset ('css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset ('css/bootstrap-responsive.min.css') }}" />
        <link rel="stylesheet" href="{{ asset ('css/maruti-login.css') }}"  />
    </head>
    <body>
        <div id="loginbox"  style="box-shadow: 0px 0px 20px 1px black; " >
            <form id="loginform" class="form-vertical" action="{{ path("fos_user_security_check") }}" method="post">
                 <div class="control-group normal_text"> <h3><img src=" {{ asset ('h-doc.png') }} " /></h3></div>

                 {% if csrf_token %}
                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                        {% endif %}
                <div class="control-group">
                    <div class="controls">
                        <div class="main_input_box">
                            <span class="add-on"><i class="icon-user"></i></span>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="Username">
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <div class="main_input_box">
                            <span class="add-on"><i class="icon-lock"></i></span>
                            <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Password">
                        </div>
                    </div>
                </div>

                <div class="control-group">
                  <center>
                            {% if error %}
                                <div>Mauvais identifiant saisie.Veuillez reessayer</div>
                            {% endif %}
                  </center>
                </div>

                <div class="form-actions">
                    <center>
                    <span class="pull"><input type="submit" class="btn btn-success" value="Login" /></span>
                    </center>
                </div>
            </form>
        </div>
        
        <script src=" {{ asset ('js/jquery.min.js') }} "></script>  
        <script src=" {{ asset ('js/maruti.login.js') }} "></script> 
    </body>

</html>